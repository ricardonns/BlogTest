<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<p>
  <b>Publish:</b>
  <%= @post.publish %>
</p>

<p>
  <b>Category:</b>
  <%= @post.category.name if @post.category %>
</p>

<table>
    <% @post.comments.each do |comment| %>

        <tr>
            <td>
              <%= comment.commenter %>
            </td>
            <td>
              <%= comment.title%>
            </td>
        </tr>
        <tr style="border-bottom-style:solid; border-bottom-width:3px;">
            <td colspan="2">
              <%= comment.body %>
            </td>
        </tr>
    <% end %>
</table>

<h2>Add comment</h2>

<%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
      <b>Commenter:</b>
      <%= f.text_field :commenter %>
    </p>

    <p>
      <b>Title:</b>
      <%= f.text_field :title %>
    </p>

    <p>
      <b>Body:</b>
      <%= f.text_area :body %>
    </p>

    <%= f.submit %>

<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
